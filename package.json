{
  "name": "electronim",
  "version": "0.0.0",
  "description": "Free/Libre open source Electron based multi instant messaging (IM) client.",
  "author": {
    "name": "Marc Nuri",
    "url": "https://www.marcnuri.com"
  },
  "main": "src/index.js",
  "bin": {
    "electronim": "bin.js"
  },
  "files": [
    "build-config",
    "bundles",
    "docs",
    "src",
    "utils"
  ],
  "scripts": {
    "pretest": "eslint --ext .mjs,.js --ignore-path .gitignore . && node webpack.js",
    "test": "jest --coverage",
    "prestart": "node webpack.js --no-lib",
    "start": "electron .",
    "prepack": "node webpack.js",
    "prepublish": "node webpack.js",
    "prebuild:linux": "node webpack.js",
    "build:linux": "electron-builder --linux",
    "prebuild:mac": "node webpack.js",
    "build:mac": "electron-builder --mac",
    "prebuild:win": "node webpack.js",
    "build:win": "electron-builder --win"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manusa/electronim.git"
  },
  "keywords": [
    "electron",
    "electronim",
    "IM",
    "chat",
    "tabs",
    "messaging",
    "telegram",
    "whatsapp",
    "slack"
  ],
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/manusa/electronim/issues"
  },
  "homepage": "https://github.com/manusa/electronim#readme",
  "build": {
    "appId": "com.marcnuri.electronim",
    "productName": "ElectronIM",
    "copyright": "Copyright 2019 Marc Nuri",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "snap": {
      "summary": "Free/Libre open source Electron based multi instant messaging (IM) client.",
      "plugs": [
        "alsa",
        "browser-support",
        "camera",
        "desktop",
        "desktop-legacy",
        "device-buttons",
        "display-control",
        "home",
        "io-ports-control",
        "network",
        "network-bind",
        "opengl",
        "pulseaudio",
        "removable-media",
        "screencast-legacy",
        "unity7",
        "wayland",
        "x11"
      ],
      "after": [
        "desktop-gtk3"
      ]
    },
    "linux": {
      "artifactName": "electronim-linux-${arch}.${ext}",
      "executableName": "electronim",
      "category": "Network",
      "desktop": {
        "Terminal": "false",
        "Type": "Application",
        "Categories": "GTK;GNOME;Network;Email;Chat;InstantMessaging;"
      },
      "icon": "icon_1024x1024.png",
      "target": [
        "AppImage",
        "snap",
        "tar.gz"
      ]
    },
    "mac": {
      "artifactName": "electronim-mac.${ext}",
      "category": "public.app-category.utilities",
      "icon": "icon_1024x1024.png",
      "target": [
        "dmg",
        "tar.gz"
      ],
      "entitlements": "build-config/entitlements.mac.plist",
      "entitlementsInherit": "build-config/entitlements.mac.plist"
    },
    "dmg": {
      "title": "ElectronIM",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 122,
          "y": 240,
          "type": "file"
        }
      ],
      "sign": false
    },
    "win": {
      "artifactName": "electronim-win-${arch}.${ext}",
      "icon": "icon.ico",
      "target": [
        "zip",
        "portable"
      ]
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>/src/__tests__/setup-jest.js"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "node-addons"
      ]
    },
    "testMatch": [
      "**/(*.)(spec|test).?(m)js?(x)"
    ],
    "verbose": true
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "5.15.4",
    "@testing-library/dom": "8.19.0",
    "@testing-library/user-event": "14.4.3",
    "bulma": "0.9.4",
    "chrome-tabs": "5.4.0",
    "css-loader": "6.7.1",
    "electron-builder": "23.6.0",
    "eslint": "8.27.0",
    "eslint-plugin-jest": "27.1.3",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-environment-node": "29.3.1",
    "jest-extended": "3.1.0",
    "sass": "1.56.0",
    "sass-loader": "13.1.0",
    "style-loader": "3.3.1",
    "val-loader": "5.0.0",
    "webpack": "5.75.0"
  },
  "dependencies": {
    "axios": "1.1.3",
    "dictionary-ca": "2.6.0",
    "dictionary-ca-valencia": "2.6.0",
    "dictionary-de": "2.0.4",
    "dictionary-en-gb": "2.4.0",
    "dictionary-en-us": "2.2.1",
    "dictionary-es": "3.2.0",
    "dictionary-eu": "3.2.0",
    "dictionary-fr": "2.8.0",
    "dictionary-it": "1.4.0",
    "dictionary-ka": "1.1.0",
    "dictionary-lt": "1.2.0",
    "dictionary-nl": "1.6.0",
    "dictionary-pl": "^1.2.3",
    "dictionary-pt": "^1.3.1",
    "dictionary-pt-br": "^1.2.2",
    "dictionary-ru": "^2.0.1",
    "dictionary-sv": "^3.0.1",
    "dictionary-tr": "^1.3.3",
    "dictionary-uk": "^2.1.1",
    "electron": "21.2.3",
    "htm": "3.1.1",
    "markdown-it": "13.0.1",
    "nodehun": "3.0.2",
    "preact": "10.11.0"
  }
}
